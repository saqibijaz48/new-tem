# =================================
# SUPABASE CONFIGURATION
# =================================

# Get these values from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =================================
# APPLICATION CONFIGURATION  
# =================================

# Site URL (for production, use your actual domain)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# =================================
# PAYMENT CONFIGURATION
# =================================

# Stripe (if you plan to add card payments later)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# =================================
# EMAIL CONFIGURATION (Optional)
# =================================

# For order confirmations, notifications, etc.
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# =================================
# STORAGE CONFIGURATION
# =================================

# Supabase Storage bucket for product images
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=product-images

# =================================
# ANALYTICS (Optional)
# =================================

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =================================
# SECURITY
# =================================

# JWT Secret for additional security (optional)
# JWT_SECRET=your-super-secret-jwt-key

# =================================
# DEVELOPMENT SETTINGS
# =================================

# Set to 'development' for local development
NODE_ENV=development

# Enable debug mode
DEBUG=false
